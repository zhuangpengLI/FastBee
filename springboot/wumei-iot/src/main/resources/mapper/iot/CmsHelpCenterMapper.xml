<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.iot.mapper.CmsHelpCenterMapper">
    
    <resultMap type="CmsHelpCenter" id="CmsHelpCenterResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="content"    column="content"    />
        <result property="categoryId"    column="category_id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="orderNum"    column="order_num"    />
        <result property="enabled"    column="enabled"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCmsHelpCenterVo">
       select a.id, a.title, a.content, a.category_id, b.category_name, a.order_num, a.enabled, a.del_flag, a.create_by, a.create_time, a.update_by, a.update_time, a.remark 
        from cms_help_center a,cms_help_center_category b
    </sql>

    <select id="selectCmsHelpCenterList" parameterType="CmsHelpCenter" resultMap="CmsHelpCenterResult">
        <include refid="selectCmsHelpCenterVo"/>
        <where>  
        	a.category_id = b.category_id
            <if test="title != null  and title != ''"> and a.title = #{title}</if>
            <if test="content != null  and content != ''"> and a.content = #{content}</if>
            <if test="categoryId != null "> and a.category_id = #{categoryId}</if>
            <if test="categoryName != null  and categoryName != ''"> and b.category_name like concat('%', #{categoryName}, '%')</if>
            <if test="orderNum != null "> and a.order_num = #{orderNum}</if>
            <if test="enabled != null "> and a.enabled = #{enabled}</if>
        </where>
        order by a.order_num asc
    </select>
    
    <select id="selectCmsHelpCenterById" parameterType="Long" resultMap="CmsHelpCenterResult">
        <include refid="selectCmsHelpCenterVo"/>
        where a.category_id = b.category_id and a.id = #{id}
    </select>
        
    <insert id="insertCmsHelpCenter" parameterType="CmsHelpCenter" useGeneratedKeys="true" keyProperty="id">
        insert into cms_help_center
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="categoryName != null and categoryName != ''">category_name,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="enabled != null">enabled,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="enabled != null">#{enabled},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCmsHelpCenter" parameterType="CmsHelpCenter">
        update cms_help_center
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="enabled != null">enabled = #{enabled},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCmsHelpCenterById" parameterType="Long">
        delete from cms_help_center where id = #{id}
    </delete>

    <delete id="deleteCmsHelpCenterByIds" parameterType="String">
        delete from cms_help_center where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>